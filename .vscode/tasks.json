{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build with g++",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "main.cpp",
        "point.cpp",
        "line1.cpp",
        "limb.cpp",
        "body.cpp",
        "-o", "OOCatcher.exe",
        "'-Wl,--subsystem,console'"  
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
